<h3>Trustee Users</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th># Trustee</th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= "#{user.twitter_nickname} (#{user.email})" %></td>
        <td><%= user.trustee(problem).count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
<%= will_paginate users %>