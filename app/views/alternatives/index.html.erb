<h3>Active alternatives</h3>

<% if @alternatives.count > 0 %>
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Desc</th>
	      <th>Tw hash</th>
	      <th></th>
	      <th></th>
	      <th></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @alternatives.each do |alternative| %>
	      <tr>
	        <td><%= alternative.name %></td>
	        <td><%= alternative.desc %></td>
	        <td><%= alternative.tw_hash %></td>
	        <td><%= link_to "Details", problem_alternative_path(@problem, alternative), :class => "alt-details", :remote => true %></td>
	        <td><%= link_to "Edit", edit_problem_alternative_path(@problem, alternative), :class => "alt-edit", :remote => true %></td>
	        <td><%= link_to "Reject", problem_alternative_path(@problem, alternative), method: :delete, :class => "alt-reject", :remote => true %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<%= will_paginate @alternatives, :class => "alt-active-pagination pagination" %>
<% else %>
	<div align="center">
		<h4> There is no active alternatives.</h4>
	</div>
<% end %>
