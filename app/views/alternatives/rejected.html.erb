<% if @alternatives.count > 0 %>
	<h3>Rejected alternatives</h3>
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Desc</th>
	      <th>Tw hash</th>
	      <!-- <th></th> -->
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @alternatives.each do |alternative| %>
	      <tr>
	        <td><%= alternative.name %></td>
	        <td><%= alternative.desc %></td>
	        <td><%= alternative.tw_hash %></td>
	        <!-- <td><%= link_to "Active", active_problem_alternative_path(@problem, alternative), :class => "alt-active", :remote => true %></td> -->
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<%= will_paginate @alternatives, :class => "alt-rejected-pagination pagination" %>
<% else %>
	<div align="center">
		<h4> There is no rejected alternatives.</h4>
	</div>
<% end %>