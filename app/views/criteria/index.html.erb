<% if @criteria.count > 0 %>
	<h3>Active criteria</h3>
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Desc</th>
	      <th>Tw hash</th>
	      <th>Weight</th>
	      <th></th>
	      <th></th>
	      <th></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @criteria.each do |criterium| %>
	      <tr>
	        <td><%= criterium.name %></td>
	        <td><%= criterium.desc %></td>
	        <td><%= criterium.tw_hash %></td>
	        <td><%= criterium.weight %></td>
	        <td><%= link_to "Details", problem_criterium_path(@problem, criterium), :class => "criteria-details", :remote => true %></td>
	        <td><%= link_to "Edit", edit_problem_criterium_path(@problem, criterium), :class => "criteria-edit", :remote => true %></td>
	        <td><%= link_to "Reject", problem_criterium_path(@problem, criterium), method: :delete, :class => "criteria-reject", :remote => true %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<%= will_paginate @criteria, :class => "criteria-active-pagination pagination" %>
<% else %>
	<div align="center">
		<h4> There is no active criteria.</h4>
	</div>
<% end %>
